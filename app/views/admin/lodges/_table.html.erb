<div id="listing">
  <table class="table table-striped">
    <thead>
    <tr>
      <th><%= '#' %></th>
      <th><%= 'User' %></th>
      <th><%= 'Name' %></th>
      <th><%= 'Registration Number' %></th>
      <th><%= 'Grand Lodge' %></th>
      <th><%= 'City' %></th>
      <th><%= 'Events' %></th>
      <th><%= 'Published' %></th>
      <th><%= 'Created at' %></th>
      <th><%= 'Updated at' %></th>
      <th><%= 'Actions' %></th>
    </tr>
    </thead>
    <tbody>
    <% @lodges.each do |lodge| %>
        <tr>
          <td><%= link_to lodge.id, admin_lodge_path(lodge) %></td>
          <td><%= lodge.user.nil? ? '-' : link_to(lodge.user.email, admin_user_path(lodge.user)) %></td>
          <td><%= link_to lodge.name, admin_lodge_path(lodge) %></td>
          <td><%= lodge.registration_number %></td>
          <td><%= link_to lodge.grand_lodge.abbreviation, [:admin, lodge.grand_lodge]  %></td>
          <td><%= lodge.city %></td>
          <td><%= link_to lodge.events.count, admin_lodge_lodge_events_path(lodge) %></td>
          <td><%= lodge.published %></td>
          <td><%= lodge.created_at %></td>
          <td><%= lodge.updated_at %></td>
          <td>
            <%= link_to 'Edit', edit_admin_lodge_path(lodge), :class => 'btn btn-mini' %>
            <%= link_to 'Destroy', admin_lodge_path(lodge), :method => :delete, data: {confirm: 'Are you sure?'}, :class => 'btn btn-mini btn-danger' %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <%= paginate @lodges, :theme => 'twitter-bootstrap', :pagination_class => 'pagination-right' %>
</div>
