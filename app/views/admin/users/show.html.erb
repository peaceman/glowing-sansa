<div class="page-header">
  <h2>User: <%= @user.email %></h2>
</div>
<%= render partial: 'tabbed_nav', locals: {:active => :show} %>
<dl class="dl-horizontal">
  <dt><%= 'E-Mail' %></dt>
  <dd><%= @user.email %></dd>
  <dt><%= 'Created at' %></dt>
  <dd><%= @user.created_at %></dd>
  <dt><%= 'Updated at' %></dt>
  <dd><%= @user.updated_at %></dd>
  <dt><%= 'Actions' %></dt>
  <dd>
    <%= link_to 'Edit', edit_admin_user_path(@user), :class => 'btn btn-mini' %>
    <%= link_to 'Delete', [:admin, @user], :method => 'delete', :data => {confirm: 'Are you sure?'}, :class => 'btn btn-mini btn-danger' %>
  </dd>
</dl>